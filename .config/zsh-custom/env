#!/usr/bin/env zsh

# Custom functions
addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

venv() {
    if ! command -v python3 >/dev/null 2>&1; then
        if ! command -v python >/dev/null 2>&1; then
            echo "Python not found."
            return
        fi
    fi

    if [[ ! -f ./.venv/Scripts/activate ]]; then
        if command -v python3 >/dev/null 2>&1; then
            python3 -m venv .venv
        else
            python -m venv .venv
        fi
        echo "Virtual environment created."
    fi
    source ./.venv/Scripts/activate
}

ff() {
    dirs=($HOME/repos $HOME/projects)
    selected=$(find "${dirs[@]}" -mindepth 1 -maxdepth 1 -type d | fzf)

    if [[ -z $selected ]]; then
        return
    fi

    z -- "$selected"
}

y() {
    local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
    yazi "$@" --cwd-file="$tmp"
    if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
        z -- "$cwd"
    fi
    rm -f -- "$tmp"
}

# Custom environment variables
export EDITOR=nvim
export GIT_EDITOR=nvim
export XDG_CONFIG_HOME=$HOME/.config
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)
export ZSH_AUTOSUGGEST_COMPLETION_IGNORE="psql *"
export YAZI_CONFIG_HOME=$XDG_CONFIG_HOME/yazi
export _ZO_RESOLVE_SYMLINKS=

# Custom paths
addToPathFront $HOME/.local/scripts
addToPath /opt/nvim-linux64/bin

# Key bindings
bindkey -e
bindkey -s '^f' "^Qts\n"
bindkey '^[[A' history-substring-search-up
bindkey '^[OA' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey '^[OB' history-substring-search-down
bindkey -M emacs '^P' history-substring-search-up
bindkey -M emacs '^N' history-substring-search-down
