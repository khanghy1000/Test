#!/usr/bin/env zsh

# Custom functions
addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

# Custom environment variables
export LANG=en_US.UTF-8
export GIT_EDITOR=nvim
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)

# Custom paths
addToPathFront $HOME/.local/scripts
